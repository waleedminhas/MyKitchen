<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:paddingVertical="10dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/unfriend_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:paddingBottom="8dp"
        android:text="@string/no_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_margin="8dp"
        android:background="#c0c0c0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unfriend_friend_name"/>

    <ImageView
        android:id="@+id/unfriend_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_person_remove_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:tint="@color/red" />

    <TextView
        android:id="@+id/unfriend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/unfriend"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/unfriend_icon"
        app:layout_constraintStart_toEndOf="@id/unfriend_icon"
        app:layout_constraintTop_toTopOf="@id/unfriend_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>